<!DOCTYPE HTML>
<!-- presentation/updateboekForm.twig -->
<html>
	<head>
		<meta charset=utf-8>
		<title>Boeken</title>
	</head>
	<body>
		<h1>Boek bijwerken</h1>
                {% if error == "titelbestaat" %}
                    <p style="color: red">Titel bestaat al!</p>
                {% endif %} 
               	<form method="post" action="updateboek.php?action=process&id= 
			{{boek.id}}">
			<table>
				<tr>
					<td>Titel:</td>
					<td>
						<input type="text" name="txtTitel"  
						value="{{boek.titel}}">
					</td>
				</tr>
				<tr>
                                    
                                    <td>Genre:</td>
                                    <td>
                                            <select name="selGenre">
                                                {% for genre in genrelijst %}   
                                                     {% if genre.Id == boek.Genre.Id %}
                                                        <option value="{{genre.Id}}" selected>
                                                            {{genre.GenreNaam}}
                                                        </option>
                                                     {% else %} 
                                                        <option value="{{genre.Id}}">
                                                            {{genre.GenreNaam}}
                                                        </option>  
                                                     {% endif %} 
                                                                                                      
                                                {%endfor%}
                                            </select>
                                    </td>
 				</tr>
				<tr>
                                        <td></td>
					<td>
						<input type="submit" value="Bijwerken" />
					</td>
				</tr>
			</table>
		</form>
	</body>
</html> 

